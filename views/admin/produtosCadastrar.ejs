<%- include("../admin/partials/header") %>

<div class="container">

    <div class="area-titulo">
        <h1>PAINEL ADMINISTRATIVO</h1>
    </div>

    <div class="topo">
        <h2>Dados do Novo Produto</h2>
    </div>

    <div class="area-formulario">

        <form action="/admin/produtos/acaoCadastrar" method="POST" enctype="multipart/form-data" class="cadastroProduto">

            <div>
                <label for="id">ID:</label>
                <input type="text" name="id" id="id">
            </div>

            <div>
                <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome">
            </div>

            <div>
                <label for="preco">Preço:</label>
                <input type="text" name="preco" id="preco">
            </div>

            <div>
                <label for="descricao">Descrição:</label>
                <textarea name="descricao" id="descricao"></textarea>
            </div>

            <div>
                <label for="imagemProduto">Imagem do Produto</label>
                <input type="file" name="imagemProduto" id="imagemProduto">
            </div>

            <button type="submit">Cadastrar</button>

        </form>

    </div>

</div>