<%- include("../admin/partials/header") %>

<div class="container">

    <div class="topo">
        <h2>Produtos</h2>
        <a href="/admin/produtos/cadastrar">Adicionar Novo</a>
    </div>

    <div class="area-tabela">

        <table class="content-table">

            <thead>

                <tr>
                    <th>ID</th>
                    <th>Imagem</th>
                    <th>Nome</th>
                    <th>Geração</th>
                    <th>Cor</th>
                    <th>Valor</th>
                    <th>Estoque</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>

            </thead>

            <tbody>

                <% for(let produto of produtos) { %>

                    <tr>
                        <td><%= produto.id %></td>
                        <td><img src="/upload/images/produtos/<%= produto.imagem %>" width="100"></td>
                        <td><%= produto.nome %></td>
                        <td><%= produto.geracao %></td>
                        <td><%= produto.cor %></td>
                        <td><%= produto.valor %></td>
                        <td><%= produto.estoque %></td>
                        <td><%= produto.descricao %></td>
                        <td>
                            <a href="/admin/produtos/editar/<%= produto.id %>" class="button-editar">Editar</a>
                            <br>
                            <a href="/admin/produtos/excluir/<%= produto.id %>" class="button-excluir">Excluir</a>
                        </td>
                    </tr>

                <% } %>

            </tbody>

        </table>

    </div>

</div>